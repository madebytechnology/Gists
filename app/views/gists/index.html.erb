<%- model_class = Gist -%>

<div class="container-fluid full-width">
<form class="navbar-form navbar-center" controller="gists" role="search" action="/gists/search">
              <div class="form-group">
                <%= form_tag gists_path, :method => 'get' do %>
                <%= (text_field_tag :lang, params[:lang], :size=>"20", class:'form-control') %>             
<br><br><%= button_tag(type: 'submit', class: "btn btn-primary") do %>
  <span class="glyphicon glyphicon-search"> by language</span> 
<% end %>
<% end %>
